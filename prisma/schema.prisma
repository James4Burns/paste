// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Paste {
  id         String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  slug       String  @unique
  paste      String
  expiration String
  burn       Boolean
  encrypted  Boolean
  date       String
}
